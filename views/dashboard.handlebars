
{{#if isManager}}
<h1 class="main-heading">Shifts you added</h1>
<table class="table table-dark custom-tbl">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Status</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    {{#each shifts as |shift|}}
    {{> shift-info shift}}
    </tr>
    {{/each}}
   </tbody>
  </table>
<h1 class="main-heading">staff you added</h1>
<table class="table table-dark custom-tbl">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Fullname</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Hours limit</th>
    </tr>
  </thead>
  <tbody>
    {{#each staffs as |staff|}}
    {{> staff-info staff}}
    </tr>
    {{/each}}
   </tbody>
  </table>
{{else}}
<h1 class="main-heading">Your availabile slots</h1>
<table class="table table-dark custom-tbl">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    {{#each slots as |slot|}}
    {{> slot-info slot}}
    </tr>
    {{/each}}
   </tbody>
  </table>

{{/if}}
